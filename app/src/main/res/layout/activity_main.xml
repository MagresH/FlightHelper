<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fade_gradient"
    tools:context=".MainActivity">


    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card5"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:paddingStart="22dp"
        android:paddingBottom="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card6"
        app:layout_constraintVertical_bias="0.971">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            tools:layout_editor_absoluteX="22dp"
            tools:layout_editor_absoluteY="12dp">

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/airplaneToggleButton2"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="116dp"
                android:layout_height="87dp"
                android:scaleType="centerInside"
                android:src="@drawable/flashlight_on_svgrepo_com"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.015"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.454" />

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/airplaneToggleButton"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="116dp"
                android:layout_height="87dp"
                android:scaleType="centerInside"
                android:src="@drawable/airplane"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.454"
                app:neumorph_shadowColorDark="#ECCCCC"
                app:neumorph_shadowColorLight="#FFFBFB" />

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/wifiToggleButton"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="116dp"
                android:layout_height="87dp"
                android:scaleType="centerInside"
                android:src="@drawable/wifi_svgrepo_com"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.971"
                app:layout_constraintStart_toStartOf="@+id/airplaneToggleButton2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.454" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card6"
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:background="@color/white"
        android:paddingStart="22dp"
        android:paddingBottom="11dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card8"
        app:layout_constraintVertical_bias="0.0"
        app:neumorph_backgroundColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <soup.neumorphism.NeumorphTextView
                android:id="@+id/textview4"
                style="@style/Widget.Neumorph.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"

                android:text="Check location"
                android:textAlignment="center"
                android:textColor="#00DBFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.074"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.492"
                app:neumorph_shadowColorDark="#00FFFFFF"
                app:neumorph_shadowColorLight="#00DFFAFF" />

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/locationButton"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="166dp"
                android:layout_height="79dp"
                android:scaleType="centerInside"
                android:src="@drawable/compass_svgrepo_com"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.924"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card00"
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081"
        app:neumorph_backgroundColor="#FFFFFF">

        <soup.neumorphism.NeumorphTextView
            android:id="@+id/textview2"
            style="@style/Widget.Neumorph.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:rotationX="4"
            android:text="FlightHelper"
            android:textAlignment="center"
            android:textColor="#00DBFF"
            android:textSize="55sp"
            android:textStyle="bold"
            app:neumorph_shadowColorDark="#00AFCC"
            app:neumorph_shadowColorLight="#DFFAFF" />

        <!--            app:neumorph_shadowElevation="2dp"-->
    </soup.neumorphism.NeumorphCardView>

    <soup.neumorphism.NeumorphCardView
        android:id="@+id/card8"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@color/white"
        android:paddingStart="22dp"
        android:paddingBottom="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card00"
        app:layout_constraintVertical_bias="0.417"
        app:neumorph_backgroundColor="@color/white"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="103dp">

            <soup.neumorphism.NeumorphTextView
                android:id="@+id/textview3"
                style="@style/Widget.Neumorph.TextView"
                android:layout_width="140dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:gravity="center"

                android:text="Your flights"
                android:textAlignment="center"
                android:textColor="#00DBFF"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.069"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:neumorph_shadowColorDark="#00FFFFFF"
                app:neumorph_shadowColorLight="#00000000" />

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/flightDetailsButton"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="166dp"
                android:layout_height="79dp"
                android:scaleType="centerInside"
                android:src="@drawable/airport_svgrepo_com"
                android:text="Button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.924"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </soup.neumorphism.NeumorphCardView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="169dp"
        android:layout_height="187dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.372"
        app:srcCompat="@drawable/plane" />

</androidx.constraintlayout.widget.ConstraintLayout>